APP_NAME=DentalSync
APP_ENV=local
APP_KEY=base64:CHANGE_THIS_TO_RANDOM_32_CHARS
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Montevideo

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_UY

APP_MAINTENANCE_DRIVER=file

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
BCRYPT_ROUNDS=15

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS - MARIADB
# ========================================
DB_CONNECTION=mariadb
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dentalsync
DB_USERNAME=dentalsync
DB_PASSWORD=password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Para Docker (sobrescribir en .env):
# DB_HOST=database
# DB_PORT=3306

# ========================================
# CONFIGURACIÓN DE SESIONES
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ========================================
# CONFIGURACIÓN DE ARCHIVOS Y CACHE
# ========================================
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ========================================
# CONFIGURACIÓN DE FRONTEND
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# CONFIGURACIÓN DE WHATSAPP BUSINESS API
# ========================================
# Obtén estas credenciales desde Meta for Developers
# https://developers.facebook.com/apps/
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=dentalsync_webhook_2025
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_TIMEOUT=30